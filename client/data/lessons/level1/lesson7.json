  "grammar": [
    {
      "point": "Subject-Predicate Sentences",
      "explanation": "In Chinese, adjectives can be predicates without 是. Structure: Subject + Adjective (+ intensifier like 很)",
      "example": "我身体很好。 他们学习非常努力。",
      "translation": "My health is very good. They study very hard."
    },
    {
      "point": "有 and 没有",
      "explanation": "有 means 'to have' or 'there is'. The negative form is 没有. For questions, use 有没有.",
      "example": "你有同屋吗？— 我没有同屋。",
      "translation": "Do you have a roommate? — I don't have a roommate."
    },
    {
      "point": "Affirmative-Negative Questions",
      "explanation": "A question formed by combining positive and negative forms of the verb/adjective.",
      "example": "你的宿舍大不大？ 远不远？",
      "translation": "Is your dorm big or small? Is it far or near?"
    },
    {
      "point": "Descriptive Adjectives",
      "explanation": "Use adjectives to describe qualities. Many use intensifiers like 很、非常、比较、挺.",
      "example": "很好、非常忙、比较远、挺多的",
      "translation": "very good, extremely busy, quite far, quite a lot"
    }
  ],
