  "grammar": [
    {
      "point": "Question Formation with 吗",
      "explanation": "To form a yes/no question in Chinese, simply add 吗 (ma) at the end of a statement. The word order remains the same.",
      "example": "你好。→ 你好吗？",
      "translation": "You're well. → Are you well?"
    },
    {
      "point": "Responding to 好吗",
      "explanation": "When someone asks 你好吗, respond with 我很好 or provide a descriptive answer.",
      "example": "你好吗？→ 我很好。",
      "translation": "How are you? → I'm very well."
    },
    {
      "point": "The Adverb 很",
      "explanation": "很 (very) is commonly used before adjectives. It's often more natural than stating the adjective alone.",
      "example": "我很好。我很忙。",
      "translation": "I'm very well. I'm very busy."
    },
    {
      "point": "也 (also, too)",
      "explanation": "也 is placed before the verb or adjective to indicate 'also' or 'too'.",
      "example": "我很好。你也很好。",
      "translation": "I'm very well. You're also very well."
    }
  ],
