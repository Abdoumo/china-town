  "dialogue": {
    "title": "Directions and Transportation",
    "lines": [
      {
        "speaker": "Lili",
        "chinese": "去邮局怎么走？",
        "pinyin": "Qù yóujú zěnme zǒu?",
        "english": "How do I get to the post office?"
      },
      {
        "speaker": "Chinese Person",
        "chinese": "一直往前走，到十字路口往右拐。",
        "pinyin": "Yīzhí wǎng qián zǒu, dào shízì lùkǒu wǎng yòu guǎi.",
        "english": "Go straight ahead, at the intersection turn right."
      },
      {
        "speaker": "Lili",
        "chinese": "离这儿多远？",
        "pinyin": "Lí zhèr duō yuǎn?",
        "english": "How far from here?"
      },
      {
        "speaker": "Chinese Person",
        "chinese": "二百多米。",
        "pinyin": "Èrbǎi duō mǐ.",
        "english": "More than two hundred meters."
      },
      {
        "speaker": "Paul",
        "chinese": "周末咱们去大同，好吗？",
        "pinyin": "Zhōumò zánmen qù Dàtóng, hǎo ma?",
        "english": "Let's go to Datong on the weekend, okay?"
      },
      {
        "speaker": "Yingnan",
        "chinese": "好啊。坐火车还是坐飞机？",
        "pinyin": "Hǎo a. Zuò huǒchē háishi zuò fēijī?",
        "english": "Great. Train or plane?"
      }
    ]
  },
  "grammar": [
    {
      "point": "Giving Directions",
      "explanation": "Use imperatives with 走、往、到、拐. Structure: [Direction] + [Verb] or 到 + [Landmark] + 往 + [Direction] + [Verb]",
      "example": "一直往前走。 到十字路口往右拐。",
      "translation": "Go straight ahead. At the intersection, turn right."
    },
    {
      "point": "Approximate Numbers",
      "explanation": "Use two adjacent numbers to express approximations. Structure: [Number 1] + [Number 2] or [Number] + 多 + [Measure word]",
      "example": "六七岁、十三四公里、二百多米",
      "translation": "6 or 7 years old, about 13 or 14 kilometers, more than 200 meters"
    },
    {
      "point": "还是...吧 for Preference",
      "explanation": "Use 还是 + [Option] + 吧 to express a preference after comparison.",
      "example": "我骑车技术不太高，还是走那条路吧。",
      "translation": "My biking skills aren't that good, let's still take that way."
    },
    {
      "point": "Double Clauses with 又...又...",
      "explanation": "Use 又 + [Adjective] + 又 + [Adjective] to list two qualities.",
      "example": "又快又舒服。",
      "translation": "Both fast and comfortable."
    }
  ],
