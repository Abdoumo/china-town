  "dialogue": {
    "title": "Restaurant Dining",
    "lines": [
      {
        "speaker": "Zhimei",
        "chinese": "听说四川菜很好吃，咱们去尝尝，好吗？",
        "pinyin": "Tīng shuō Sìchuān cài hěn hǎochī, zánmen qù chángchang, hǎo ma?",
        "english": "It is said Sichuan food is delicious, let's go taste it, okay?"
      },
      {
        "speaker": "Lili",
        "chinese": "好啊。什么时候去？",
        "pinyin": "Hǎo a. Shénme shíhou qù?",
        "english": "Great. When shall we go?"
      },
      {
        "speaker": "Zhimei",
        "chinese": "今天晚上怎么样？",
        "pinyin": "Jīntiān wǎnshang zěnmeyàng?",
        "english": "How about tonight?"
      },
      {
        "speaker": "Lili",
        "chinese": "今天晚上我有事，明天中午好吗？",
        "pinyin": "Jīntiān wǎnshang wǒ yǒu shì, míngtiān zhōngwǔ hǎo ma?",
        "english": "I have something tonight. How about tomorrow at noon?"
      },
      {
        "speaker": "Waiter",
        "chinese": "这是菜单，请点菜。",
        "pinyin": "Zhè shì càidān, qǐng diǎn cài.",
        "english": "This is the menu, please order."
      }
    ]
  },
  "grammar": [
    {
      "point": "Tag Questions with 好吗",
      "explanation": "Add 好吗 at the end of a statement to turn it into a polite question.",
      "example": "咱们去尝尝，好吗？ 明天中午好吗？",
      "translation": "Let's go taste it, okay? How about tomorrow at noon?"
    },
    {
      "point": "是...A 是A Construction",
      "explanation": "This pattern confirms a fact before adding a contrasting point using 不过.",
      "example": "好吃是好吃，不过油太多。",
      "translation": "It is delicious, but there is too much oil."
    },
    {
      "point": "Describing Tastes",
      "explanation": "Use adjectives for flavors: 甜 (sweet), 酸 (sour), 辣 (spicy), 咸 (salty), 苦 (bitter)",
      "example": "酸辣汤、甜的、咸的、苦的",
      "translation": "hot and sour soup, sweet, salty, bitter"
    },
    {
      "point": "Pivotal Sentences (兼语句)",
      "explanation": "The object of the first verb is the subject of the second verb.",
      "example": "我请你吃韩国菜。",
      "translation": "I'll treat you to Korean food."
    }
  ],
