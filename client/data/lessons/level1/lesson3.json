  "grammar": [
    {
      "point": "Question Word: 什么",
      "explanation": "什么 means 'what'. It's placed in the position where the answer would go. The word order remains the same as a statement.",
      "example": "你吃什么？→ 我吃饺子。",
      "translation": "What do you eat? → I eat dumplings."
    },
    {
      "point": "Objects of Verbs",
      "explanation": "In Chinese, the direct object comes immediately after the verb. The structure is: Subject + Verb + Object.",
      "example": "我吃米饭。我喝茶。",
      "translation": "I eat rice. I drink tea."
    },
    {
      "point": "Listing Options",
      "explanation": "Multiple options can be listed with or without connecting words, separated by pauses or commas.",
      "example": "米饭、面条、面包、包子。",
      "translation": "Rice, noodles, bread, steamed buns."
    }
  ],
