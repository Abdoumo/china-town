  "grammar": [
    {
      "point": "Location Question: 在哪儿",
      "explanation": "To ask where something is, use: [Subject] + 在 + 哪儿？ The answer is: [Subject] + 在 + [Location]",
      "example": "图书馆在哪儿？— 图书馆在那儿。",
      "translation": "Where is the library? — The library is there."
    },
    {
      "point": "Polite Inquiry: 请问",
      "explanation": "Use 请问 before asking a question to be polite. It means 'excuse me' or 'may I ask'.",
      "example": "请问，图书馆在哪儿？",
      "translation": "Excuse me, where is the library?"
    },
    {
      "point": "Direction 去",
      "explanation": "去 means 'to go'. The structure is: 去 + [Place]",
      "example": "去天安门。",
      "translation": "Going to Tiananmen."
    },
    {
      "point": "Phrase 就在",
      "explanation": "就在 means 'right there' or 'just at'. It emphasizes that the location is close or obvious.",
      "example": "就在那儿。",
      "translation": "Right there."
    }
  ],
