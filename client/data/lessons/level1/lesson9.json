  "dialogue": {
    "title": "Family Matters",
    "lines": [
      {
        "speaker": "Xiaoyè",
        "chinese": "直美，你想不想家？",
        "pinyin": "Zhíměi, nǐ xiǎng bu xiǎng jiā?",
        "english": "Zhimei, do you miss home?"
      },
      {
        "speaker": "Zhimei",
        "chinese": "当然想。",
        "pinyin": "Dāngrán xiǎng.",
        "english": "Of course I do."
      },
      {
        "speaker": "Xiaoyè",
        "chinese": "你家有几口人？",
        "pinyin": "Nǐ jiā yǒu jǐ kǒu rén?",
        "english": "How many people in your family?"
      },
      {
        "speaker": "Zhimei",
        "chinese": "我家有五口人。",
        "pinyin": "Wǒ jiā yǒu wǔ kǒu rén.",
        "english": "My family has five people."
      },
      {
        "speaker": "Xiaoyè",
        "chinese": "你家有什么人？",
        "pinyin": "Nǐ jiā yǒu shénme rén?",
        "english": "Who is in your family?"
      },
      {
        "speaker": "Zhimei",
        "chinese": "爸爸、妈妈、两个哥哥和我。",
        "pinyin": "Bàba, māma, liǎng gè gēge hé wǒ.",
        "english": "Father, mother, two elder brothers, and me."
      }
    ]
  },
  "grammar": [
    {
      "point": "Measure Word for Family: 口",
      "explanation": "Use 口 specifically for family members. Structure: 几 + 口 + 人",
      "example": "五口人。",
      "translation": "Five people."
    },
    {
      "point": "Asking About Professions",
      "explanation": "Structure: [Subject] + 做什么工作？ or [Subject] + 是 + [Profession]",
      "example": "你是做什么工作的？ 他是医生。",
      "translation": "What do you do? He is a doctor."
    },
    {
      "point": "Family Relations without 的",
      "explanation": "Family terms don't need 的. Direct: 我父亲、我母亲、我儿子",
      "example": "我爸爸、我哥哥、我妹妹",
      "translation": "my father, my brother, my sister"
    },
    {
      "point": "Expressing Age",
      "explanation": "Structure: [Person] + 今年 + [Number] + 岁",
      "example": "我父亲今年六十岁。",
      "translation": "My father is sixty years old this year."
    }
  ],
