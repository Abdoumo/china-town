  "grammar": [
    {
      "point": "正在 (zhèngzài) - Progressive Aspect",
      "explanation": "正在 is used to indicate an action that is in progress. It emphasizes that the action is happening right now.",
      "example": "他正在等他的爱人。",
      "translation": "He is waiting for his lover."
    },
    {
      "point": "呢 (ne) - Particle for Emphasis",
      "explanation": "The particle 呢 at the end of a sentence adds emphasis or indicates that the situation is continuing or in process.",
      "example": "他正在找工作呢。",
      "translation": "He is looking for a job (right now)."
    },
    {
      "point": "一边...一边... (yībǐan...yībǐan...) - Simultaneous Actions",
      "explanation": "This structure describes two actions happening at the same time.",
      "example": "一边喝咖啡一边聊天儿。",
      "translation": "Drinking coffee while chatting."
    },
    {
      "point": "可能 (kěnéng) - Possibility",
      "explanation": "可能 can be used as an auxiliary verb to express possibility or probability.",
      "example": "你们可能在做什么?",
      "translation": "What might you be doing?"
    },
    {
      "point": "刚才 (gāngcái) - Just now",
      "explanation": "刚才 refers to the recent past, something that happened just now.",
      "example": "刚才我去他那儿。",
      "translation": "I just went to his place."
    }
  ],
