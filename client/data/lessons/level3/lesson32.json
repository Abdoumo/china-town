  "dialogue": {
    "title": "Health Habits",
    "lines": [
      {
        "speaker": "小方",
        "chinese": "你的身体真棒!有什么秘诀吗?",
        "pinyin": "Nǐ de shēntǐ zhën zhuàng! Yǒushénme mijué ma?",
        "english": "Your body is really great! What's the secret?"
      },
      {
        "speaker": "小方",
        "chinese": "很简单,就是吃好,睡好,坚持锻炼。",
        "pinyin": "Hěn jiǎndān, jiùshì chī hǎo, shuì hǎo, jiānchí duànliàn.",
        "english": "It's simple: eat well, sleep well, and persist in exercising."
      },
      {
        "speaker": "小田",
        "chinese": "说起来容易,做起来难啊!就说锻炼吧,我总是坚持不下来。",
        "pinyin": "Shuōqǐlai róngyì, zuòqǐlai nán a! Jiùshuō duànliàn ba, wǒ zǒngshi jiānchí búxiàlai.",
        "english": "It's easy to say but hard to do! Speaking of exercise, I can never stick with it."
      },
      {
        "speaker": "小方",
        "chinese": "要锻炼就不能三天打鱼,两天晒网。",
        "pinyin": "Yào duànliàn jiù búnéng săn tiãn dă yu, liăng tiãn shài wăng.",
        "english": "If you want to exercise, you can't lack perseverance."
      },
      {
        "speaker": "小田",
        "chinese": "好吧,从下个星期开始,我每天坚持锻炼半个小时。",
        "pinyin": "Hǎo ba, cóng xiàge xīngqī kāishǐ, wǒ měitiān jiānchí duànliàn bàn ge xiǎoshí.",
        "english": "Okay, starting next week, I'll exercise for half an hour every day."
      },
      {
        "speaker": "小方",
        "chinese": "这一次希望你能坚持下去。",
        "pinyin": "Zhè yì cì xīwàng nǐ néng jiānchí xiàqu.",
        "english": "This time I hope you can stick with it."
      },
      {
        "speaker": "医生",
        "chinese": "医生说非住院不可。",
        "pinyin": "Yīshēng shuō fēi zhù yuàn búkě.",
        "english": "The doctor said hospitalization is necessary."
      },
      {
        "speaker": "小高",
        "chinese": "以后可千万小心点儿!",
        "pinyin": "Yǐhòu kě qiānwàn xiǎoxin diăn'er!",
        "english": "Be careful from now on!"
      }
    ]
  },
  "grammar": [
    {
      "point": "动词 + 得下来/坚持不下来 (can/cannot continue)",
      "explanation": "Indicates whether an action can be continued or persisted",
      "example": "我总是坚持不下来。",
      "translation": "I can never stick with it."
    },
    {
      "point": "动词 + 得下去/坚持下去 (continue in the future)",
      "explanation": "Indicates continuing an action into the future",
      "example": "希望你能坚���下去。",
      "translation": "I hope you can stick with it."
    },
    {
      "point": "别提多...了 (incredibly...)",
      "explanation": "Expresses an extreme degree of something",
      "example": "别提多难受了!",
      "translation": "It was incredibly painful!"
    },
    {
      "point": "非...不可 (must, have to)",
      "explanation": "Indicates necessity or requirement",
      "example": "医生说非住院不可。",
      "translation": "The doctor said hospitalization is necessary."
    },
    {
      "point": "千万...! (absolutely...!)",
      "explanation": "Used in imperative sentences to strongly emphasize",
      "example": "可千万小心点儿!",
      "translation": "Absolutely be careful!"
    }
  ],
